{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug GTK App",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/gtk-app",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "debug"
        }
    ]
}